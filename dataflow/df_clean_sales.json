{
	"name": "df_clean_sales",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_sales",
						"type": "DatasetReference"
					},
					"name": "SourceSales"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          {Order Number} as integer,",
				"          {Line Item} as short,",
				"          {Order Date} as date,",
				"          {Delivery Date} as date,",
				"          CustomerKey as integer,",
				"          StoreKey as short,",
				"          ProductKey as short,",
				"          Quantity as short,",
				"          {Currency Code} as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SourceSales",
				"SourceSales derive(colonne1 = ERROR_FUNCTION(''),",
				"          sales_quality = (iif(!isNull({Order Date}), 25, 0) + \r",
				"iif(!isNull(Quantity), 25, 0) + \r",
				"iif(!isNull(ProductKey), 25, 0) + \r",
				"iif(Quantity >= 0, 25, 0))) ~> derivedColumn1"
			]
		}
	}
}